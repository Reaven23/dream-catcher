<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="mystic-hero">
        <h1><i class="bi bi-person-plus"></i> Inscription</h1>
        <p>Créez votre compte pour commencer votre voyage onirique</p>
      </div>

      <div class="mystic-card">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mystic-form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label" %>
            <% if @minimum_password_length %>
              <em class="text-muted">(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Votre mot de passe" %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmez votre mot de passe" %>
          </div>

          <div class="text-center">
            <%= f.submit "S'inscrire", class: "btn btn-mystic btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
