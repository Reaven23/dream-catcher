<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="mystic-hero">
        <h1><i class="bi bi-box-arrow-in-right"></i> Connexion</h1>
        <p>Accédez à votre journal de rêves</p>
      </div>

      <div class="mystic-card">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mystic-form" }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Votre mot de passe" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= f.submit "Se connecter", class: "btn btn-mystic btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
