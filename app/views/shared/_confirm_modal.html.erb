<!-- Modale de confirmation custom -->
<div id="confirm-modal" class="confirm-modal-overlay" data-action="click->confirm#closeOnOverlay">
  <div class="confirm-modal-dialog">
    <div class="confirm-modal-header">
      <div class="confirm-icon">
        <i class="bi bi-exclamation-triangle"></i>
      </div>
      <h3 class="confirm-title">Confirmation</h3>
    </div>
    <div class="confirm-modal-body">
      <p class="confirm-message">Êtes-vous sûr ?</p>
    </div>
    <div class="confirm-modal-footer">
      <button type="button" class="btn btn-cancel btn-mystic-secondary" data-action="click->confirm#close">
        Annuler
      </button>
      <button type="button" class="btn btn-confirm btn-danger" data-action="click->confirm#confirmAction">
        Confirmer
      </button>
    </div>
  </div>
</div>
