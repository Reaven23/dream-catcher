<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="mystic-hero">
        <h1><i class="bi bi-clipboard-check"></i> Quiz Initial</h1>
        <p>Ces informations nous aideront à personnaliser l'interprétation de vos rêves</p>
      </div>

      <div class="mystic-card">
        <%= form_with model: @user, url: quiz_path, method: :post, class: "mystic-form" do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger mystic-alert mb-4">
              <h4 class="alert-heading">
                <i class="bi bi-exclamation-triangle"></i> <%= pluralize(@user.errors.count, "erreur") %> détectée(s) :
              </h4>
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :first_name, "Prénom", class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", placeholder: "Votre prénom" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :gender, "Genre", class: "form-label" %>
              <%= f.select :gender, [["Homme", "Homme"], ["Femme", "Femme"], ["Autre", "Autre"], ["Préfère ne pas dire", "Préfère ne pas dire"]], { prompt: "Sélectionnez..." }, { class: "form-select" } %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :age, "Âge", class: "form-label" %>
              <%= f.number_field :age, class: "form-control", min: 1, max: 120, placeholder: "Votre âge" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :zodiac_sign, "Signe astrologique", class: "form-label" %>
              <%= f.select :zodiac_sign, [
                ["Bélier", "Bélier"],
                ["Taureau", "Taureau"],
                ["Gémeaux", "Gémeaux"],
                ["Cancer", "Cancer"],
                ["Lion", "Lion"],
                ["Vierge", "Vierge"],
                ["Balance", "Balance"],
                ["Scorpion", "Scorpion"],
                ["Sagittaire", "Sagittaire"],
                ["Capricorne", "Capricorne"],
                ["Verseau", "Verseau"],
                ["Poissons", "Poissons"]
              ], { prompt: "Sélectionnez votre signe..." }, { class: "form-select" } %>
            </div>
          </div>

          <div class="mb-4">
            <%= f.label :relationship_status, "Situation amoureuse", class: "form-label" %>
            <%= f.select :relationship_status, [
              ["Célibataire", "Célibataire"],
              ["En couple", "En couple"],
              ["Marié(e)", "Marié(e)"],
              ["Divorcé(e)", "Divorcé(e)"],
              ["Veuf/Veuve", "Veuf/Veuve"],
              ["Compliqué", "Compliqué"],
              ["Préfère ne pas dire", "Préfère ne pas dire"]
            ], { prompt: "Sélectionnez..." }, { class: "form-select" } %>
          </div>

          <div class="text-center">
            <%= f.submit "Valider et continuer", class: "btn btn-mystic btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
