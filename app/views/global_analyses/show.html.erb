<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="mystic-hero">
        <h1><i class="bi bi-graph-up-arrow"></i> Analyse Globale</h1>
        <p>Synthèse de vos <%= @dreams.count %> rêves enregistrés</p>
      </div>

      <div class="mystic-card">
        <h2><i class="bi bi-stars"></i> Interprétation Globale</h2>
        <div class="interpretation-text">
          <%= @global_interpretation %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to "Voir mes rêves", dreams_path, class: "btn btn-mystic" %>
      </div>
    </div>
  </div>
</div>
