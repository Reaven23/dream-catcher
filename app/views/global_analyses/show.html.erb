<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <%= link_to global_analyses_path, class: "btn btn-mystic-secondary" do %>
          <i class="bi bi-arrow-left"></i> Retour aux analyses globales
        <% end %>
        <%= button_to global_analysis_path(@global_analysis), method: :delete, class: "btn btn-danger", data: { action: "click->confirm#open", confirm_title: "Supprimer cette analyse ?", confirm_message: "Cette action supprimera définitivement cette analyse globale.\n\nCette action est irréversible.", confirm_text: "Supprimer", confirm_type: "danger" } do %>
          <i class="bi bi-trash"></i> Supprimer cette analyse
        <% end %>
      </div>

      <div class="mystic-hero">
        <h1>
          <i class="bi bi-graph-up-arrow"></i>
          <% if @global_analysis.first_dream_date.present? && @global_analysis.last_dream_date.present? %>
            Analyse du <%= @global_analysis.first_dream_date.strftime("%d/%m") %> au <%= @global_analysis.last_dream_date.strftime("%d/%m/%Y") %>
          <% else %>
            Analyse Globale
          <% end %>
        </h1>
        <p>
          <% if @global_analysis.dreams_count.present? %>
            <strong><%= @global_analysis.dreams_count %> rêves</strong> analysés •
          <% end %>
          Générée le <%= @global_analysis.created_at.strftime("%d/%m/%Y à %H:%M") %>
        </p>
      </div>

      <div class="mystic-card">
        <h2><i class="bi bi-stars"></i> Interprétation Globale</h2>
          <div class="interpretation-text markdown-content">
            <%= markdown(@global_analysis.interpretation) %>
          </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to "Voir mes rêves", dreams_path, class: "btn btn-mystic me-2" %>
        <%= link_to "Nouvelle analyse", global_analyses_path, class: "btn btn-mystic-secondary" %>
      </div>
    </div>
  </div>
</div>
